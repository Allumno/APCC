<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/formula"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:padding="10dp"
		android:layout_weight="0.3">

		<FrameLayout
			android:id="@+id/image"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="0.4"
			>

			<ImageView
				android:id="@+id/image_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp"/>
		</FrameLayout>

		<FrameLayout
			android:id="@+id/question"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="0.6">

			<TextView
				android:id="@+id/question_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="visible"
				android:textSize="20sp"
				android:lineSpacingMultiplier="0.9"
				android:padding="5dp"/>
		</FrameLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.4"
		android:orientation="horizontal">

		<RelativeLayout
			android:id="@+id/options_column_1"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:padding="10dp">

			<FrameLayout
				android:id="@+id/opt0"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp">
				<ImageButton
					android:id="@+id/opt0_image"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:visibility="gone"/>

				<Button
					android:id="@+id/opt0_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:visibility="gone"/>
			</FrameLayout>

			<FrameLayout
				android:id="@+id/opt1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:layout_below="@id/opt0">
				<ImageButton
					android:id="@+id/opt1_image"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:visibility="gone"/>

				<Button
					android:id="@+id/opt1_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:visibility="gone"/>
			</FrameLayout>
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/options_column_2"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:padding="10dp">

			<FrameLayout
				android:id="@+id/opt2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp">
				<ImageButton
					android:id="@+id/opt2_image"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:visibility="gone"/>

				<Button
					android:id="@+id/opt2_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:visibility="gone"/>
			</FrameLayout>

			<FrameLayout
				android:id="@+id/opt3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:layout_below="@id/opt2">

				<ImageButton
					android:id="@+id/opt3_image"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:visibility="gone"/>

				<Button
					android:id="@+id/opt3_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:visibility="gone"/>
			</FrameLayout>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>