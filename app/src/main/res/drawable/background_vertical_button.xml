<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">

	<item>
		<shape>
			<corners
				android:radius="5dp"
				/>
			<gradient
				android:angle="270"
				android:centerX="50%"
				android:startColor="#A3A3A3"
				android:centerColor="#BFBFBF"
				android:endColor="#E8E8E8"
				android:type="linear"
				/>
			<size
				android:width="45dp"
				android:height="10dp"
				/>
			<padding
				android:left="5dp"
				android:top="5dp"
				android:right="5dp"
				android:bottom="5dp" />
		</shape>
	</item>
</selector>